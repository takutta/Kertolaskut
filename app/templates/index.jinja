    <div class="mt-5 text-center">
        {{ form.submit(class_="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none
        focus:ring-blue-300 cursor-pointer transition-colors duration-200 font-medium rounded-lg text-sm w-full
        sm:w-auto px-5 py-2.5
        text-center ")
        }}</div>



</form>
{% endblock %}

